{
  "name": "git-precommit-checks",
  "description": "Customizable checks on pre-commit (staged) contents",
  "version": "3.0.7",
  "engines": {
    "node": ">=v10.0.0"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbrehin/git-precommit-checks.git"
  },
  "keywords": [
    "git",
    "hook",
    "hooks",
    "before commit",
    "precommit",
    "pre-commit",
    "pre-commit checks",
    "pre-commit checker",
    "check staged contents"
  ],
  "author": "Maxime Br√©hin <maxime@delicious-insights.com> (http://delicious-insights.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mbrehin/git-precommit-checks/issues"
  },
  "homepage": "https://mbrehin.github.io/git-precommit-checks/",
  "bin": {
    "git-precommit-checks": "./index.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "chai": "^4.2.0",
    "chai-jest-diff": "^1.0.2",
    "dirty-chai": "^2.0.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^27.4.5",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^1.0.0",
    "precise-commits": "^1.0.2",
    "prettier": "^1.19.1",
    "semantic-release": "^19.0.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.4.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:import/errors"
    ],
    "plugins": [
      "prettier",
      "import"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "singleQuote": true,
          "trailingComma": "es5",
          "semi": false
        }
      ],
      "no-irregular-whitespace": 0
    },
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./index.js && precise-commits"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "lib/**/*.js"
    ],
    "notify": true,
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.js"
    ],
    "testEnvironment": "node",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "collectCoverage"
        }
      ],
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ]
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "dependencies": {
    "cli-table": "^0.3.1",
    "find-up": "^4.1.0",
    "load-json-file": "^6.2.0",
    "node-notifier": "^8.0.1",
    "read-pkg-up": "^5.0.0"
  }
}
